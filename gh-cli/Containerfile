FROM registry.access.redhat.com/ubi10/ubi-minimal:10.1-1762952303@sha256:ebc9604c67aa5daa87cd431d64754a1cb6e22372446a6e8e0d966bfc709c9f3f

ARG VERSION=2.83.1

RUN curl -sLo /etc/yum.repos.d/gh-cli.repo https://cli.github.com/packages/rpm/gh-cli.repo && \
  microdnf upgrade --refresh -y && \
  microdnf install -y gh-$VERSION-1.x86_64 jq git && \
  microdnf clean all && \
  gh version && \
  jq --version && \
  git --version

CMD ["bash"]
