FROM registry.access.redhat.com/ubi10/nodejs-22-minimal:10.1-1768926492@sha256:dd6da7c085b50c84239cef3dd0b4dce8d9fbad1f729f2ee486bb635238629111

ARG VERSION=17.1.3

USER 0
RUN microdnf upgrade --refresh -y && \
  microdnf install -y jq && \
  microdnf clean all -y && \
  npm i release-please@${VERSION} -g && \
  release-please --version

USER 1001
ENTRYPOINT ["release-please"]
