FROM registry.access.redhat.com/ubi10/nodejs-22-minimal:10.1-1765296083@sha256:203eb041686dc734304648e90edab01194ebf9ae44c8dbd4fd24f061c955c221

ARG VERSION=17.1.3

USER 0
RUN microdnf upgrade --refresh -y && \
  microdnf install -y jq && \
  microdnf clean all -y && \
  npm i release-please@${VERSION} -g && \
  release-please --version

USER 1001
ENTRYPOINT ["release-please"]
