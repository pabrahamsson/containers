FROM registry.access.redhat.com/ubi10/nodejs-22-minimal:10.1-1770107240@sha256:35c585ce1e98d66c52d25e8a02547ea664607f5ff604fb9154a6caabbdd47eb6

ARG VERSION=17.2.0

USER 0
RUN microdnf upgrade --refresh -y && \
  microdnf install -y jq && \
  microdnf clean all -y && \
  npm i release-please@${VERSION} -g && \
  release-please --version

USER 1001
ENTRYPOINT ["release-please"]
