FROM registry.access.redhat.com/ubi10/nodejs-22-minimal:10.1-1767601359@sha256:a8a91b547bf3987e71494e994bebb7c86bb0641507b59ba774f7a6b63b12d98e

ARG VERSION=17.1.3

USER 0
RUN microdnf upgrade --refresh -y && \
  microdnf install -y jq && \
  microdnf clean all -y && \
  npm i release-please@${VERSION} -g && \
  release-please --version

USER 1001
ENTRYPOINT ["release-please"]
