FROM registry.access.redhat.com/ubi10/nodejs-22-minimal:10.1-1763041816@sha256:f1b5b3625e68fb2288927b603b8bb8755294b44b2015b8c53c5a938c87064fbd

ARG VERSION=17.1.3

USER 0
RUN microdnf upgrade --refresh -y && \
  microdnf install -y jq && \
  microdnf clean all -y && \
  npm i release-please@${VERSION} -g && \
  release-please --version

USER 1001
ENTRYPOINT ["release-please"]
