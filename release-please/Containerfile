FROM registry.access.redhat.com/ubi10/nodejs-22-minimal:10.1-1769718078@sha256:c257aa6dd74246e9182d622f91a255175a2c6b90efb6bfa15ccff74a8a9c3822

ARG VERSION=17.2.0

USER 0
RUN microdnf upgrade --refresh -y && \
  microdnf install -y jq && \
  microdnf clean all -y && \
  npm i release-please@${VERSION} -g && \
  release-please --version

USER 1001
ENTRYPOINT ["release-please"]
