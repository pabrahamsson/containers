FROM registry.access.redhat.com/ubi10/nodejs-22-minimal:10.1-1766060691@sha256:01728ceba5b506afcd7bf05bdea85c989d2a8de514f4be632e39df21aa39baeb

ARG VERSION=17.1.3

USER 0
RUN microdnf upgrade --refresh -y && \
  microdnf install -y jq && \
  microdnf clean all -y && \
  npm i release-please@${VERSION} -g && \
  release-please --version

USER 1001
ENTRYPOINT ["release-please"]
