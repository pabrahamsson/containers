FROM registry.access.redhat.com/ubi10/nodejs-22-minimal:10.1-1763396814@sha256:0383f73e7880e9ffbde0fba347b79b4a8013fd82c7c2e515799cc81af9672193

ARG VERSION=17.1.3

USER 0
RUN microdnf upgrade --refresh -y && \
  microdnf install -y jq && \
  microdnf clean all -y && \
  npm i release-please@${VERSION} -g && \
  release-please --version

USER 1001
ENTRYPOINT ["release-please"]
