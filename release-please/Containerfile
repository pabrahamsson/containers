FROM registry.access.redhat.com/ubi10/nodejs-22-minimal:10.1-1769387068@sha256:89ccb7785e5539d31dba652fcd0770937900b033aa87107af5ba22f3b0c1b3b2

ARG VERSION=17.2.0

USER 0
RUN microdnf upgrade --refresh -y && \
  microdnf install -y jq && \
  microdnf clean all -y && \
  npm i release-please@${VERSION} -g && \
  release-please --version

USER 1001
ENTRYPOINT ["release-please"]
