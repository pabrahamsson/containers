FROM registry.access.redhat.com/ubi10/nodejs-22-minimal:10.0@sha256:b38b2d075e0ea3f9d98ba0221dff24d2830b25cdd46e7a7cc9002ab96baf815d

ARG VERSION=17.1.3

USER 0
RUN microdnf upgrade --refresh -y && \
  microdnf install -y jq && \
  microdnf clean all -y && \
  npm i release-please@${VERSION} -g && \
  release-please --version

USER 1001
ENTRYPOINT ["release-please"]
