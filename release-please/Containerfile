FROM registry.access.redhat.com/ubi10/nodejs-22-minimal:10.1-1764649415@sha256:52f5a9e3eb1191276ef576ad88142a27d4ef61317384f383534526f55761387b

ARG VERSION=17.1.3

USER 0
RUN microdnf upgrade --refresh -y && \
  microdnf install -y jq && \
  microdnf clean all -y && \
  npm i release-please@${VERSION} -g && \
  release-please --version

USER 1001
ENTRYPOINT ["release-please"]
