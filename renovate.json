{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/goaccess/Containerfile/"
      ],
      "matchStrings": [
        "ARG GOACCESS_VERSION=(?<currentValue>.*)"
      ],
      "depNameTemplate": "goaccess/goaccess",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/gh-cli/Containerfile/"
      ],
      "matchStrings": [
        "ARG VERSION=(?<currentValue>.*)"
      ],
      "depNameTemplate": "cli/cli",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/hugo-asciidoctor/Containerfile/"
      ],
      "matchStrings": [
        "ARG HUGO_VERSION=(?<currentValue>.*)"
      ],
      "depNameTemplate": "gohugoio/hugo",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/release-please/Containerfile/"
      ],
      "matchStrings": [
        "ARG VERSION=(?<currentValue>.*)"
      ],
      "depNameTemplate": "googleapis/release-please",
      "datasourceTemplate": "github-releases"
    }
  ]
}
